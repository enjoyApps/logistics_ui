<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Account_login" >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/background_search"
        android:text="点击关联账号，系统将自动同步快递信息" />
        
    <ImageButton
        android:id="@+id/to_login_taobao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="true"
        android:scaleType="fitXY"
        android:src="@drawable/login_taobao" />
    
    <ImageButton
        android:id="@+id/to_login_paipai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="true"
        android:scaleType="fitXY"
        android:src="@drawable/login_paipai" />
    
    <ImageButton
        android:id="@+id/to_login_360buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="true"
        android:scaleType="fitXY"
        android:src="@drawable/login_360buy" />

</LinearLayout>